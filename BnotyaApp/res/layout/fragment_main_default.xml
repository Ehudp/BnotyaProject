<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:padding="10dp" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/screen_background"        
        android:contentDescription="@string/description_card" />

        <TextView
            android:id="@+id/tvMainText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="@string/about_main_menu"            
	        android:layout_marginLeft="8dp"
	        android:layout_marginRight="8dp"
	        android:layout_marginTop="8dp" />

    <Button android:id="@+id/btnWomenList"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="openWomenList"
            android:layout_below="@id/tvMainText"
            android:layout_margin="10dp"
            android:text="@string/open_women_list"/>

    <Button android:id="@+id/btnTehilot"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="openTehilot"
            android:layout_below="@id/btnWomenList"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/open_tehilot"/>

        <ImageButton
            android:id="@+id/btnEMail"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentBottom="true" 
            android:layout_marginLeft="18dp"  
            android:layout_marginBottom="10dp"           
            android:contentDescription="@string/description_card"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher"
            android:onClick="openMailPage"
            android:background="@drawable/blue_button_selector" />

        <ImageButton
            android:id="@+id/btnFacebook"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="8dp"  
            android:layout_marginBottom="10dp"           
            android:layout_toRightOf="@id/btnEMail"
            android:contentDescription="@string/description_card"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher"
            android:background="@drawable/blue_button_selector" />    

</RelativeLayout>